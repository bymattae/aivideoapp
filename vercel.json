{
  "version": 2,
  "builds": [
    {
      "src": "src/frontend/next.config.js",
      "use": "@vercel/next"
    },
    {
      "src": "api/generate.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/generate",
      "dest": "api/generate.py"
    },
    {
      "src": "/(.*)",
      "dest": "src/frontend/$1"
    }
  ],
